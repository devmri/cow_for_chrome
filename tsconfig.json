{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "ES2021.WeakRef"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "isolatedModules": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "types": ["chrome", "node", "vite/client"]
  },
  "include": ["src"]
}
